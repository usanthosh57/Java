                        switch(input)
                        {
                            case 1:{ //Payment gateway
                                System.out.println("\t\t\t\tRedirecting to Payment Mode....");
                                Thread.sleep(2000);
                                System.out.println("Select the Payment Method");
                                System.out.println("1.G-Pay\n2.Phone-Pay");
                                int pay=sc.nextInt();
                                switch(pay)
                                {
                                    case 1:  //g-pay
                                    { //Security Pin
                                        System.out.print("\t\t\t\tEnter Security Pin:");
                                        int pin=sc.nextInt();
                                        if(pin==1234){
                                        System.out.println("\t\t\t\tProcessing...");
                                        Thread.sleep(1000);
                                        System.out.println("\t\t\t\tTotal Bill:"+bill);
                                        System.out.print("\t\t\t\tEnter the amount:");
                                        double amt=sc.nextInt();
                                        if(amt==bill)
                                        {
                                            Thread.sleep(500);
                                            int sys_otp = (int)(Math.random()*9999+9999);
                                            System.out.print("\t\t\t\tEnter the OTP:"+sys_otp+" ");
                                            int otp=sc.nextInt();
                                            if(sys_otp==otp){
                                                Thread.sleep(2000);
                                                System.out.println("\t\t\t\tProcessing...");
                                                System.out.println("\t\t\t\tOrder will be delivered soon :)");
                                            }else{
                                                System.out.println("Invalid OTP :(");
                                            }
                                        }break;
                                    }
                                  }
                                  case 2:  //phone-pay
                                  { //Security Pin
                                    System.out.print("\t\t\t\tEnter Security Pin:");
                                    int pin=sc.nextInt();
                                    if(pin==1234){
                                    System.out.println("\t\t\t\tProcessing...");
                                    Thread.sleep(1000);
                                    System.out.println("\t\t\t\tTotal Bill:"+bill);
                                    System.out.print("\t\t\t\tEnter the amount:");
                                    double amt=sc.nextInt();
                                    if(amt==bill)
                                    {
                                        Thread.sleep(500);
                                        int sys_otp = (int)(Math.random()*9999+9999);
                                        System.out.print("\t\t\t\tEnter the OTP:"+sys_otp+" ");
                                        int otp=sc.nextInt();
                                        if(sys_otp==otp){
                                            Thread.sleep(2000);
                                            System.out.println("\t\t\t\tProcessing...");
                                            System.out.println("\t\t\t\tOrder will be delivered soon :)");
                                        }else{
                                            System.out.println("Invalid OTP :(");
                                        }
                                    }break;
                                }
                              }
                                  default:{
                                    System.out.println("\t\t\t\tPayment Failed :(");
                                    break;
                                }
                                } 
                            }
                            
                        }break;
                    }//End of Prawn biriyani
                    
                    
                }  //End food items of A2B
                
                break;    
            }//end case of hotel A2B
            
            default :{ //hotel_selection
                System.out.println("\t\t\t\tSelect Hotels in the list given");
                break;
            }
         
        }

    }

}
